<table>
  <tr>
    <td WIDTH="40"><b>Rank</b></td>
    <td WIDTH="100"><b>Vote</b></td>
    <td WIDTH="100"><b>Title</b></td>
    <td WIDTH="200"><b>Link</b></td>
    <td WIDTH="200"><b>Description</b></td>
    <td WIDTH="100"><b>Posted by</b></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  
<% postnumber = 1 %>
<% @posts.each do |post| %>
  <tr>
    <td><%= postnumber %></td>
    <% postnumber = postnumber + 1 %>
    <td> <%= link_to 'up', votes_path %>
        <%= link_to 'down', votes_path %> </td>
    <td> <%= post.title %> </td>
    <td>
    <a href=<%= post.link %> ><%= post.link %></a>
    </td>
    <td><%= post.description %></td>
    <td><%= post.user.name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

